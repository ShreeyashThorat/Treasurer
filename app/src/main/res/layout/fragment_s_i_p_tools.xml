<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingTop="10dp"
    android:paddingEnd="10dp"
    tools:context=".SIPToolsFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="UselessLeaf">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@color/RoyalBlue"
                        android:paddingStart="10dp"
                        android:paddingTop="7dp"
                        android:text="Financial Tools"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        tools:ignore="HardcodedText,RtlSymmetry" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingTop="10dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/lumpsum_cal"
                            style="@style/Widget.Material3.Button.TextButton.Icon"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:width="120dp"
                            android:height="120dp"
                            android:drawableTop="@drawable/lumpsum_cal"
                            android:text="Lumpsum Calculator"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            tools:ignore="HardcodedText,InefficientWeight,SmallSp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/sip_cal"
                            style="@style/Widget.Material3.Button.TextButton.Icon"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:width="120dp"
                            android:height="120dp"
                            android:drawableTop="@drawable/sip_cal"
                            android:text="SIP Calculator"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            tools:ignore="HardcodedText,InefficientWeight,SmallSp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/cost_of_sip_delay"
                            style="@style/Widget.Material3.Button.TextButton.Icon"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:width="120dp"
                            android:height="120dp"
                            android:drawableTop="@drawable/cost_of_delay"
                            android:text="Cost of Delay SIP"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            tools:ignore="HardcodedText,InefficientWeight,SmallSp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/marriage_cal"
                            style="@style/Widget.Material3.Button.TextButton.Icon"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:width="120dp"
                            android:height="120dp"
                            android:drawableTop="@drawable/marriage_cal"
                            android:text="Marriage Calculator"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            tools:ignore="HardcodedText,InefficientWeight,SmallSp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/retirement_cal"
                            style="@style/Widget.Material3.Button.TextButton.Icon"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:width="120dp"
                            android:height="120dp"
                            android:drawableTop="@drawable/retirement_cal"
                            android:text="Retirement Calculator"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            tools:ignore="HardcodedText,InefficientWeight,SmallSp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/edu_cal"
                            style="@style/Widget.Material3.Button.TextButton.Icon"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:width="120dp"
                            android:height="120dp"
                            android:drawableTop="@drawable/edu_cal"
                            android:text="Education Calculator"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            tools:ignore="HardcodedText,InefficientWeight,SmallSp,DuplicateSpeakableTextCheck" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/emi_cal"
                            style="@style/Widget.Material3.Button.TextButton.Icon"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:width="120dp"
                            android:height="120dp"
                            android:drawableTop="@drawable/emi_cal"
                            android:text="EMI Calculator"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            tools:ignore="HardcodedText,InefficientWeight,SmallSp,DuplicateSpeakableTextCheck" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/brokerage"
                            style="@style/Widget.Material3.Button.TextButton.Icon"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:width="120dp"
                            android:height="120dp"
                            android:drawableTop="@drawable/stp_planner"
                            android:text="Stock Calculator"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            tools:ignore="HardcodedText,InefficientWeight,SmallSp" />


                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/expense"
                            style="@style/Widget.Material3.Button.TextButton.Icon"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:width="120dp"
                            android:height="120dp"
                            android:drawableTop="@drawable/swp_planner"
                            android:text="Expense Calculator"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            tools:ignore="HardcodedText,InefficientWeight,SmallSp,DuplicateSpeakableTextCheck" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@color/RoyalBlue"
                        android:paddingStart="10dp"
                        android:paddingTop="7dp"
                        android:text="Investment Routes"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        tools:ignore="HardcodedText,RtlSymmetry" />

                    <LinearLayout
                        android:id="@+id/invest_online"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/invest_ol"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="20dp"
                            android:gravity="center_vertical"
                            android:text="@string/invest_online"
                            android:textColor="@color/black"
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@color/RoyalBlue"
                        android:paddingStart="10dp"
                        android:paddingTop="7dp"
                        android:text="Financial Guide"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        tools:ignore="HardcodedText,RtlSymmetry" />

                    <androidx.core.widget.NestedScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fillViewport="true"
                        tools:ignore="SpeakableTextPresentCheck">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingBottom="10dp">

                            <TextView
                                android:id="@+id/what_is_mutual_funds"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:focusable="true"
                                android:padding="10dp"
                                android:text="@string/what_is_mutual_fund"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="5dp"
                                android:background="@color/GhostWhite" />

                            <TextView
                                android:id="@+id/how_do_mutual_funds_work"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:focusable="true"
                                android:padding="10dp"
                                android:text="@string/how_do_mutual_funds_work"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="5dp"
                                android:background="@color/GhostWhite" />

                            <TextView
                                android:id="@+id/type_of_mutual_find"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:focusable="true"
                                android:padding="10dp"
                                android:text="@string/types_of_mutual_fund"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="5dp"
                                android:background="@color/GhostWhite" />

                            <TextView
                                android:id="@+id/advantage_of_mutual_fund"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:focusable="true"
                                android:padding="10dp"
                                android:text="@string/advantage_of_mutual_fund"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="5dp"
                                android:background="@color/GhostWhite" />

                            <TextView
                                android:id="@+id/what_is_sip"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:focusable="true"
                                android:padding="10dp"
                                android:text="@string/what_is_a_sip"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="5dp"
                                android:background="@color/GhostWhite" />

                            <TextView
                                android:id="@+id/benefits_of_sip"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:focusable="true"
                                android:padding="10dp"
                                android:text="@string/what_are_the_benefits_of_sips"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="5dp"
                                android:background="@color/GhostWhite" />

                            <TextView
                                android:id="@+id/what_is_swp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:focusable="true"
                                android:padding="10dp"
                                android:text="@string/what_is_swp"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="5dp"
                                android:background="@color/GhostWhite" />

                            <TextView
                                android:id="@+id/benefits_of_swp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:focusable="true"
                                android:padding="10dp"
                                android:text="@string/what_are_the_benefits_of_swp"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="5dp"
                                android:background="@color/GhostWhite" />

                            <TextView
                                android:id="@+id/what_is_stp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:focusable="true"
                                android:padding="10dp"
                                android:text="@string/what_is_a_stp"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="5dp"
                                android:background="@color/GhostWhite" />

                            <TextView
                                android:id="@+id/types_of_risks"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:focusable="true"
                                android:padding="10dp"
                                android:text="@string/what_are_the_types_of_risks"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="5dp"
                                android:background="@color/GhostWhite" />

                            <TextView
                                android:id="@+id/returns_are_guaranteed"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:focusable="true"
                                android:padding="10dp"
                                android:text="@string/are_returns_from_mutual_funds_guaranteed"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="5dp"
                                android:background="@color/GhostWhite" />
                        </LinearLayout>
                    </androidx.core.widget.NestedScrollView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
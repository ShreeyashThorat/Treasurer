<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:background="@color/white"
    android:gravity="center"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/delivery"
                style="@style/Widget.Material3.Button.TextButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:width="120dp"
                android:height="120dp"
                android:drawableTop="@drawable/equity"
                android:text="Delivery Equity  Calculator"
                android:textColor="@color/black"
                android:textSize="15sp"
                tools:ignore="HardcodedText,InefficientWeight,SmallSp" />

            <View
                android:id="@+id/view"
                android:layout_width="1dp"
                android:layout_height="120dp"
                android:background="@color/gray"
                tools:ignore="InefficientWeight" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/intraday"
                style="@style/Widget.Material3.Button.TextButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:width="120dp"
                android:height="120dp"
                android:drawableTop="@drawable/intraday"
                android:text="Intraday Equity Calculator"
                android:textColor="@color/black"
                android:textSize="15sp"
                tools:ignore="HardcodedText,InefficientWeight,SmallSp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/gray"
            tools:ignore="InefficientWeight" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/future"
                style="@style/Widget.Material3.Button.TextButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:width="120dp"
                android:height="120dp"
                android:drawableTop="@drawable/bear"
                android:text="F&amp;O - Futures Calculator"
                android:textColor="@color/black"
                android:textSize="15sp"
                tools:ignore="HardcodedText,InefficientWeight,SmallSp" />

            <View
                android:layout_width="1dp"
                android:layout_height="120dp"
                android:background="@color/gray"
                tools:ignore="InefficientWeight" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/options"
                style="@style/Widget.Material3.Button.TextButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:width="120dp"
                android:height="120dp"
                android:drawableTop="@drawable/bull"
                android:text="F&amp;O - Options Calculator"
                android:textColor="@color/black"
                android:textSize="15sp"
                tools:ignore="HardcodedText,InefficientWeight,SmallSp" />
        </LinearLayout>

        <View
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/gray"
            tools:ignore="InefficientWeight" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/simple_cal"
            style="@style/Widget.Material3.Button.TextButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:width="120dp"
            android:height="120dp"
            android:drawableTop="@drawable/calculator"
            android:text="Simple Calculator"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:ignore="HardcodedText,InefficientWeight,SmallSp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>